

<br><br><br><br><br>



    <div class="companyTableContainer" id="companiesLists">
        <table class="table caption-top">
          

            <caption>List of Companies</caption>
            <thead>
                <tr>
                    <th>S.N</th>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Contact Number</th>
                    <th>Pan Number</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Action</th>
                </tr>
            <tbody>
                {{#each companyList}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.company_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phone}}</td>
                    <td>{{this.pan_number}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.location}}</td>

                    <td><a href="/backend/delete/{{this.id}}" class="btn btn-primary">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
