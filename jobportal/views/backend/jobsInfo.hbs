
<style>


@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap");
@import url('href="https://fonts.googleapis.com/css?family=Tangerine">');

h2{
    text-align: center;
    font-family: "Poppins", sans-serif;
    font-size: 30px;
    color: #333;
    margin-top: 40px;
    margin-bottom: 20px;
    text-shadow: 4px 8px 8px gray;
    text-transform: uppercase;
}

.job-container {
  position: relative; /* Make the container position relative for absolute positioning of h4 */
  display: flex;
  align-items: center;
  margin-bottom: 40px;
  margin-left: 50px;
  margin-right: 60px;
  box-sizing: border-box;
  box-shadow: 5px 10px 10px gray;
}

h4 {
  position: absolute;
  top: 10px; /* Adjust as needed */
  left: 10px; /* Adjust as needed */
  width: 30px; /* Adjust as needed */
  height: 30px; /* Adjust as needed */
  background-color: #333;
  color: #fff;
  border-radius: 50%; /* Makes the element circular */
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0;
  font-family: "Poppins", sans-serif;
  font-size: 16px; /* Adjust as needed */
}

.imageContainer {
  height: 115px;
  width: 100px;
  margin-right: 40px;
  margin-left: 20px;
}

.imageContainer img {
  width: 100%;
  height: 100%;
  box-shadow: 4px 7px 7px gray;
}

.job-info-list {
  list-style-type: none;
  padding: 0;
}

.job-info-list li {
  margin-bottom: 4px;
  font-family: "Poppins", sans-serif;
  font-size: 14px;
  color: #333;
  text-transform: capitalize;
}

.job-container {
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


</style>

<h2> Jobs Information</h2> <hr>

{{#if jobsinfo}}
  {{#each jobsinfo}}
    <div class="job-container">
  <h4>{{inc @index}}</h4>
      <div class="imageContainer">
        <img src="/static/images/{{this.image}}">
      </div>
      <ul class="job-info-list" >
        
        <li>Job Title: {{this.job_name}}</li>
        <li>salary: {{this.salary}}</li>
        <li>Description: {{this.description}}</li>
        <li>Job Type: {{this.job_type}}</li>
        <li>posted Company: {{this.company_name}}</li>
      </ul>
    </div>
  {{/each}}
{{/if}}
